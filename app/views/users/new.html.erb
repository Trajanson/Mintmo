
  <section class="new-user">
    <h1>Sign up!</h1>

    <form class="new-user-form" action="<%= user_url %>" method="post">
      <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token %>">

      <label>Email
        <input type="text" name="user[email]" value="<%= @user.email %>">
      </label>

      <label>Password
        <input type="password" name="user[password]">
      </label>

      <label>First Name
        <input type="text" name="user[fname]" value="<%= @user.fname %>">
      </label>

      <label>Last Name
        <input type="text" name="user[lname]" value="<%= @user.lname %>">
      </label>

      <label>Age
        <input type="numver" name="user[age]" value="<%= @user.age %>">
      </label>

      <button>Register</button>

    </form>

    <section class="new-user-member">
      <p> Already have an account? Log in!<p>
        <form action="<%= new_session_url %>" method="get">
          <button>Log in!</button>
        </form>
    </section>
  </section>
